<div class="container mt-3 mb-3">
  <h1><%= @list.name %></h1>
  <p>Movies:</p>
  <% @list.bookmarks.each do |bookmark| %>
    <div class="card-product">
      <%= image_tag bookmark.movie.poster_url, width: 200 %>
      <div class="card-product-infos">
        <h2><%= bookmark.movie.title %></h2>
        <p><%= bookmark.comment %> <%= link_to "--DELETE--", bookmark_path(bookmark), data: { turbo_method: :delete, turbo_confirm: "Delete bookmark?" } %></p>
      </div>
    </div>
  <% end %>
  <%= link_to "Add a movie", new_list_bookmark_path(@list), class: 'btn btn-secondary text-decoration-none mt-3' %>
  <%= link_to "Back to home", lists_path, class: 'btn btn-secondary text-decoration-none mt-3' %>
</div>
